{
  "extends": ["eslint:recommended", "prettier"],
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "arrow-spacing": "off",
    "brace-style": "off",
    "comma-dangle": "off",
    "comma-spacing": "off",
    "comma-style": "off",
    "curly": ["error", "all"],
    "dot-location": "off",
    "handle-callback-err": "off",
    "indent": "off",
    "keyword-spacing": "off",
    "max-nested-callbacks": ["error", { "max": 4 }],
    "max-statements-per-line": "off",
    "no-console": "off",
    "no-empty-function": "error",
    "no-floating-decimal": "off",
    "no-inline-comments": "error",
    "no-lonely-if": "error",
    "no-multi-spaces": "off",
    "no-multiple-empty-lines": "off",
    "no-shadow": ["error", { "allow": ["err", "resolve", "reject"] }],
    "no-trailing-spaces": ["off"],
    "no-var": "error",
    "object-curly-spacing": "off",
    "prefer-const": "error",
    "quotes": ["error", "single"],
    "semi": "off",
    "space-before-blocks": "off",
    "space-before-function-paren": "off",
    "space-in-parens": "off",
    "space-infix-ops": "off",
    "space-unary-ops": "off",
    "spaced-comment": "error",
    "yoda": "error"
  }
}
